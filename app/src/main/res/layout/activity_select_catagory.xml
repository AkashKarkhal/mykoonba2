<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainactivityback"
    tools:context=".SelectCatagory">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/backward"
        android:id="@+id/Backkk"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/SelectcatagoryNm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Backkk"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#039BE5"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/regular"
        android:gravity="center_horizontal"
        android:text="Select Catagory"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

  <ListView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/Catagorylistview"
      android:layout_below="@id/SelectcatagoryNm">


  </ListView>



</RelativeLayout>