<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Passwordchangepage"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/backward"
        android:layout_margin="10dp"
        android:id="@+id/backbtnpasswordhchange"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/resetpassword"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:layout_marginVertical="5dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">


<!--Currentpassword-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="current Password"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_margin="5dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#039BE5"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Current Password"
               android:textStyle="bold"
               android:textColorHint="@color/white"
               android:inputType="textPassword"
               android:backgroundTint="#00ACC1"
               android:textColor="@color/white"
               android:layout_weight="1"
               android:textSize="15sp"
               android:layout_margin="10dp"
               android:id="@+id/Currentpasschange"/>

          <RelativeLayout
              android:layout_width="50dp"
              android:layout_height="match_parent"
              android:layout_marginEnd="7dp">

              <ImageView
                  android:id="@+id/currentpassiconpasschange"
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:layout_centerInParent="true" />


          </RelativeLayout>

       </LinearLayout>



    </androidx.cardview.widget.CardView>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Authenticate Password  "
            android:layout_marginVertical="20dp"
            android:textSize="20sp"
            android:paddingVertical="15dp"
            android:textColor="@color/white"
            android:id="@+id/Authenticatchange"
            android:backgroundTint="#039BE5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="end"
            android:id="@+id/forgtpasschangepasspage"/>


        <!--NewPassword-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_margin="5dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#039BE5"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Password"
                android:textStyle="bold"
                android:textColorHint="@color/white"
                android:inputType="textPassword"
                android:backgroundTint="#00ACC1"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_margin="10dp"
                android:id="@+id/newpasswordchange"/>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp">

                <ImageView
                    android:id="@+id/newpassiconchange"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true" />


            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


<!--COnfromPassword-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conform Password"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_margin="5dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#039BE5"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:textStyle="bold"
                android:textColorHint="@color/white"
                android:inputType="textPassword"
                android:backgroundTint="#00ACC1"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_margin="10dp"
                android:id="@+id/confirmpasschang"/>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/confirmiconchange"/>


            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

<!--saveButton-->
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:layout_marginVertical="20dp"
        android:textSize="20sp"
        android:paddingVertical="15dp"
        android:textColor="@color/white"
        android:backgroundTint="#039BE5"
        android:id="@+id/resetchane"/>

    </LinearLayout>



</LinearLayout>