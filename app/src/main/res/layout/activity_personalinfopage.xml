               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="About"
               android:textStyle="bold"
               android:textSize="15sp"/>

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:backgroundTint="#00ACC1"
